<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MyJourney">

    <TextView
        style="@style/TextViewTitleStyle"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="MY NANODEGREE APPS" />

    <Button
        style="@style/ButtonStyle"
        android:id="@+id/button"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:text="Spotify Streamer"
        android:onClick="spotifyMessage" />

    <Button
        style="@style/ButtonStyle"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:text="Scores App"
        android:onClick="scoresMessage" />

    <Button
        style="@style/ButtonStyle"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:text="Library App"
        android:onClick="libraryMessage" />

    <Button
        style="@style/ButtonStyle"
        android:id="@+id/button4"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_below="@+id/button3"
        android:text="Build It Bigger"
        android:onClick="buildMessage" />

    <Button
        style="@style/ButtonStyle"
        android:id="@+id/button5"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true"
        android:text="XYZ Reader"
        android:onClick="readerMessage" />

    <Button
        style="@style/ButtonStyle.Pink"
        android:id="@+id/button6"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true"
        android:text="Capstone:My Own App"
        android:onClick="capstoneMessage"/>


</RelativeLayout>
